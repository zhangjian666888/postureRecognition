<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list >
            <item >
                <shape android:shape="rectangle">
                    <padding android:top="9dp" android:bottom="9dp" android:left="9dp" android:right="9dp"/>
                    <stroke android:width="2dp"  android:color="@color/shs"/>
                    <corners android:radius="10dp"/>
                    <size android:height="40dp" android:width="40dp"/>
                    <solid android:color="@color/shs"/>
                </shape>
            </item>
            <item android:drawable="@drawable/logout_box_line"/>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list >
            <item >
                <shape android:shape="rectangle">
                    <padding android:top="9dp" android:bottom="9dp" android:left="9dp" android:right="9dp"/>
                    <stroke android:width="2dp" android:color="@color/shs"/>
                    <corners android:radius="10dp"/>
                    <size android:height="40dp" android:width="40dp"/>
                    <solid android:color="@color/shs"/>
                </shape>
            </item>
            <item android:drawable="@drawable/logout_box_line"/>
        </layer-list>
    </item>
</selector>
